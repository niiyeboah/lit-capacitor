{
  "scripts": {
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "build": "rimraf www && tsc && rollup -c rollup.config.js && cp -R assets www/assets && cap sync",
    "start:build": "npm run build && es-dev-server --root-dir www --app-index index.html --open --compatibility none",
    "start:android": "cap open android",
    "start:ios": "cap open ios",
    "start": "concurrently --kill-others --names tsc,es-dev-server \"npm run tsc:watch\" \"es-dev-server --app-index index.html --node-resolve --open --watch\"",
    "tsc:watch": "tsc --watch"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "@open-wc/eslint-config": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "prettier": "^2.0.4",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "@open-wc/building-rollup": "^1.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^2.3.4",
    "@types/node": "13.11.1",
    "es-dev-server": "^1.5.0",
    "typescript": "~3.8.2",
    "concurrently": "^5.1.0",
    "tslib": "^1.11.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "name": "lit-capacitor",
  "version": "0.0.0",
  "description": "Webcomponent lit-capacitor following open-wc recommendations",
  "author": "lit-capacitor",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^2.2.1",
    "@capacitor/cli": "^2.2.1",
    "@capacitor/core": "^2.2.1",
    "@capacitor/ios": "^2.2.1",
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0"
  }
}
